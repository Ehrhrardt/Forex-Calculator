<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Pip Spartans Calculator" Height="580" Width="720" FontSize="14" ResizeMode="CanMinimize">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="347*"/>
            <ColumnDefinition Width="367*"/>
        </Grid.ColumnDefinitions>

        <ComboBox x:Name="cmbAccount" HorizontalAlignment="Left" Margin="35,125,0,0" VerticalAlignment="Top" Width="141" FontSize="14" AutomationProperties.Name="lstAccounttype" Text="Standard Account" Height="26">
            <RadioButton ClickMode="Press" Content="Standard Account" FontSize="14"/>
            <RadioButton  ClickMode="Press" FontSize="14" HorizontalContentAlignment="Center" Content="Mini Account"/>
            <RadioButton ClickMode="Press" FontSize="14" Content="Micro Account"/>
        </ComboBox>
        <TextBox x:Name="edtAccountBalance" HorizontalAlignment="Left" Height="26" Margin="35,240,0,0" TextWrapping="Wrap" Text="Account Balance" VerticalAlignment="Top" Width="160" FontSize="16"/>
        <Label x:Name="lblAccountType" Content="Account type ?" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="19,60,0,0" Width="141" FontSize="16" Height="35"/>
        <Label x:Name="lblAccountBalance" Content="Account Balance ?" HorizontalAlignment="Left" Margin="16,180,0,0" VerticalAlignment="Top" FontSize="16" Width="160"/>
        <Label x:Name="lblPipsRisk" Content="Account Currency ?" HorizontalAlignment="Left" Margin="19,420,0,0" VerticalAlignment="Top" FontSize="14"/>
        <TextBox x:Name="edtAccCurrency" HorizontalAlignment="Left" Height="26" Margin="35,479,0,0" TextWrapping="Wrap" Text="Account Currency" VerticalAlignment="Top" Width="160" FontSize="16"/>
        <Label x:Name="lblPercentageRisk" Content="Risk Percentage ?" HorizontalAlignment="Left" Margin="19,300,0,0" VerticalAlignment="Top" FontSize="14"/>
        <TextBox x:Name="edtPercentageRisk" HorizontalAlignment="Left" Height="26" Margin="35,364,0,0" TextWrapping="Wrap" Text="Percentage Risk" VerticalAlignment="Top" Width="160" FontSize="16"/>
        <Label x:Name="lblAccountInfo" Content="Account Information :" HorizontalAlignment="Left" Margin="20,21,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="16"/>

        <RichTextBox x:Name="rtbInformation" HorizontalAlignment="Left" Height="511" Margin="55.667,15,0,0" VerticalAlignment="Top" Width="296" FontSize="16" SpellCheck.IsEnabled="True" Background="Black" AutomationProperties.Name="rtbInformation" Grid.Column="1">
            <FlowDocument>
                <Paragraph>
                    <Run Text=""/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Image HorizontalAlignment="Left" Height="111" Margin="236.667,18,0,0" VerticalAlignment="Top" Width="114" Source="PipSpartans-Logo.jpg" Grid.Column="1"/>

    </Grid>

</Window>
